  <!-- showing list of rooms added to be booked -->
  <div class="container page-cont hide">
    <h1 class="booking-header page-list-header">ADDED ROOMS</h1>
    <hr class="line">
    <ul class="page-ul">
      <!-- dynimacimmy adding rooms added by user -->
    </ul>
    <div class="page-li bg-total">
      TOTAL BILL AMOUNT
      <em>Rs. <span id="total-bill">10000</span></em>
    </div>
    <button class="btn btn-primary book-btn">BOOK NOW</button>
  </div>

  
  <!-- bottom ending footer section -->
  <%- include('./includes/footer') %>
    
  <!-- final confirmation and days of stay -->
  <div class="cover-screen hide">  
    <div class="box-info">
      <i class="fas fa-times"></i>
      <form action="/rooms/delhi" method="POST">
        <input type="text" id="total-cost" value="" name="totalamt" hidden>
        <input type="text" id="room-ids" value="" name="rooms" hidden>
        <input type="date" id="book-date" value="" name="date" hidden>
        
        <%- include('./includes/userdata.ejs') %>
        <button type=submit class="btn btn-danger">Confirm Booking</button>
      </form>

    </div>
