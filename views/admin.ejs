   <div class="container">
     <div class="search">
       <form action="/admin/search" method="post">
        <select name="seatch-type" id="select" class="select-search-option">
          <option value="email">Email</option>
          <option value="date">Date</option>
        </select>
        <input class="email-input" type="text" name="email" id="search-email" placeholder="Enter email">
        <input class="date hide" type="date" name="date" id="search-date">
        <button class="btn btn-success mx-3" type="submit">Search</button>
      </form>
    </div>
    <% if(bookingDetails.length == 0) { %>
      <h1><%= noresult %></h1>
    <% } else {%>
      <div class="result">
        <% bookingDetails.forEach(bd => { %>
          <div class="line">
            <div class="b-detail email"><%= bd.C_ID %></div>
            <div class="b-detail roomno"><%= bd.ROOMNO %></div>
            <div class="b-detail b-date"><%= bd.CHECKIN %></div>
          </div>
        <% }) %>
      </div>
    <% } %>
